<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_around_me"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tamtam.android.tamtam.activities.AroundMe">
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/around_me_startsell_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="start sell"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="@string/app_name" />

    <FrameLayout
        android:id="@+id/activity_around_me_list_thing_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        tools:src="@mipmap/ic_launcher"/>

</android.support.v7.widget.LinearLayoutCompat>
