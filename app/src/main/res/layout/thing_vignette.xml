<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vignette_thing_cv"
    app:cardUseCompatPadding="true"
    android:layout_width="match_parent"
    android:layout_height="200dp">

    <android.support.v7.widget.AppCompatImageView
                android:id="@+id/vignette_thing_picture_iv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"

        tools:src="@mipmap/ic_launcher" />

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:minHeight="50dp"
        tools:context="com.tamtam.android.tamtam.activities.AroundMe">
            <TextView
                android:id="@+id/vignette_thing_description_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Thing Description" />

            <TextView
                android:id="@+id/vignette_thing_price_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="10â‚¬50" />

            <TextView
                android:id="@+id/vignette_thing_localization_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="nearby" />

        </android.support.v7.widget.LinearLayoutCompat>
    </android.support.v7.widget.CardView>
